<!-- 
  This file is automatically imported by NuGet into a user's project
  when it targets a single framework, or in classic (pre 2017) csproj projects.
-->
<Project TreatAsLocalProperty="TapClientToolAssembly">
  <PropertyGroup>	

    <TapClientToolAssembly>$(MSBuildThisFileDirectory)..\tools\Build.Client.dll</TapClientToolAssembly>

    <PackagesDir>$(MSBuildThisFileDirectory)..\..\..\</PackagesDir>
  </PropertyGroup>

  <UsingTask TaskName="Build.Client.BuildTasks.LoadRemoteBuildConfig" AssemblyFile="$(TapClientToolAssembly)" />
  <UsingTask TaskName="TheAppsPajamas.Client.BuildTasks.LoadLocalBuildConfig" AssemblyFile="$(TapClientToolAssembly)" />
  <UsingTask TaskName="Build.Client.BuildTasks.SetDroidManifest" AssemblyFile="$(TapClientToolAssembly)" />
  <UsingTask TaskName="Build.Client.BuildTasks.CleanAssetCatalogues" AssemblyFile="$(TapClientToolAssembly)" />
  <UsingTask TaskName="Build.Client.BuildTasks.DeleteUnusedMediaFiles" AssemblyFile="$(TapClientToolAssembly)" />
  <UsingTask TaskName="Build.Client.BuildTasks.DownloadMediaFiles" AssemblyFile="$(TapClientToolAssembly)" />
  <UsingTask TaskName="Build.Client.BuildTasks.SetDroidMedia" AssemblyFile="$(TapClientToolAssembly)" />
  <UsingTask TaskName="Build.Client.BuildTasks.SetIosAssetCatalogueSets" AssemblyFile="$(TapClientToolAssembly)" />

  <UsingTask TaskName="Build.Client.BuildTasks.SetIosAssetCatalogue" AssemblyFile="$(TapClientToolAssembly)" />
  <UsingTask TaskName="Build.Client.BuildTasks.SetIosPlist" AssemblyFile="$(TapClientToolAssembly)" />

  <UsingTask TaskName="Build.Client.BuildTasks.DebugDump" AssemblyFile="$(TapClientToolAssembly)" />
  <UsingTask TaskName="Build.Client.BuildTasks.ModifyProject" AssemblyFile="$(TapClientToolAssembly)" />
  <UsingTask TaskName="Build.Client.BuildTasks.SaveModifiedProjectBackToProject" AssemblyFile="$(TapClientToolAssembly)" />
  <UsingTask TaskName="Build.Client.BuildTasks.AddResourceBackIntoModifedProject" AssemblyFile="$(TapClientToolAssembly)" />
</Project>