<!-- 
  This file is automatically imported by NuGet into a user's project
  when it targets a single framework, or in classic (pre 2017) csproj projects.
-->
<Project TreatAsLocalProperty="TapClientToolAssembly">
  <PropertyGroup>	

    <TapClientToolAssembly>$(MSBuildThisFileDirectory)..\tools\TheAppsPajamas.Client.dll</TapClientToolAssembly>

    <PackagesDir>$(MSBuildThisFileDirectory)..\..\..\</PackagesDir>
  </PropertyGroup>

  <UsingTask TaskName="TheAppsPajamas.Client.Tasks.LoadRemoteBuildConfig" AssemblyFile="$(TapClientToolAssembly)" />
  <UsingTask TaskName="TheAppsPajamas.Client.Tasks.SetDroidManifest" AssemblyFile="$(TapClientToolAssembly)" />
  <UsingTask TaskName="TheAppsPajamas.Client.Tasks.CleanAssetCatalogues" AssemblyFile="$(TapClientToolAssembly)" />
  <UsingTask TaskName="TheAppsPajamas.Client.Tasks.DeleteUnusedMediaFiles" AssemblyFile="$(TapClientToolAssembly)" />
  <UsingTask TaskName="TheAppsPajamas.Client.Tasks.DownloadMediaFiles" AssemblyFile="$(TapClientToolAssembly)" />
  <UsingTask TaskName="TheAppsPajamas.Client.Tasks.SetDroidMedia" AssemblyFile="$(TapClientToolAssembly)" />
  <UsingTask TaskName="TheAppsPajamas.Client.Tasks.SetIosAssetCatalogueSets" AssemblyFile="$(TapClientToolAssembly)" />

  <UsingTask TaskName="TheAppsPajamas.Client.Tasks.SetIosAssetCatalogue" AssemblyFile="$(TapClientToolAssembly)" />
  <UsingTask TaskName="TheAppsPajamas.Client.Tasks.SetIosItunesArtwork" AssemblyFile="$(TapClientToolAssembly)" />
  <UsingTask TaskName="TheAppsPajamas.Client.Tasks.SetIosPlist" AssemblyFile="$(TapClientToolAssembly)" />

  <UsingTask TaskName="TheAppsPajamas.Client.Tasks.ModifyProject" AssemblyFile="$(TapClientToolAssembly)" />
  <UsingTask TaskName="TheAppsPajamas.Client.Tasks.SaveModifiedProjectBackToProject" AssemblyFile="$(TapClientToolAssembly)" />
  <UsingTask TaskName="TheAppsPajamas.Client.Tasks.AddResourceBackIntoModifedProject" AssemblyFile="$(TapClientToolAssembly)" />
</Project>